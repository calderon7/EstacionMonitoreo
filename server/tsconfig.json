{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "lib": ["ES6"],
    "types": ["node", "express", "morgan", "typeorm", "i18n"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}